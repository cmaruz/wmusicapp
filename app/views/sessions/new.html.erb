<h1>Log in</h1>
<% if flash[:error] %>
	<div id="error">
		<%= flash[:error] %>
	</div>
<% end %>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
<%= link_to "Don't have an account? Create one now", signup_path %>